{
  "name": "whatsapp-service",
  "version": "1.0.0",
  "description": "Native WhatsApp connection service using Baileys",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "postinstall": "node -e \"const fs=require('fs');['src/store','media','logs'].forEach(d=>{if(!fs.existsSync(d))fs.mkdirSync(d,{recursive:true})})\""
  },
  "dependencies": {
    "@whiskeysockets/baileys": "^6.7.16",
    "express": "^4.21.0",
    "qrcode": "^1.5.4",
    "pino": "^9.5.0",
    "socks-proxy-agent": "^8.0.4",
    "https-proxy-agent": "^7.0.5",
    "http-proxy-agent": "^7.0.2",
    "node-cache": "^5.1.2",
    "axios": "^1.7.9"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
